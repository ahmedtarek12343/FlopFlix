generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(cuid())
  clerkId     String   @unique
  email       String   @unique
  firstName   String?
  lastName    String?
  avatar_path String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  watchedHistories WatchedHistory[]
  favoriteMovies   FavoriteMovie[]
  reviews          Review[]
  watchLists       WatchList[]
  userPreference   UserPreference?
  recommendations  Recommendation[]

  @@map("users")
}

model WatchedHistory {
  id        String   @id @default(cuid())
  movieId   Int
  userId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId])
  @@index([userId])
  @@map("watched_history")
}

model WatchList {
  id        String   @id @default(cuid())
  movieId   Int
  userId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId])
  @@index([userId])
  @@map("watchlist")
}

model FavoriteMovie {
  id        String   @id @default(cuid())
  movieId   Int
  userId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId])
  @@index([userId])
  @@map("favorite_movies")
}

model Review {
  id        String   @id @default(cuid())
  movieId   Int
  userId    String
  content   String?  @db.Text
  rating    Int?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("reviews")
}

model UserPreference {
  id              String   @id @default(cuid())
  userId          String   @unique
  favoriteGenres  String[]
  dislikedGenres  String[]
  moodPreferences String   @db.Text
  lastAnalyzedAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

model Recommendation {
  id          String   @id @default(cuid())
  userId      String
  movieId     Int
  score       Float
  reason      String   @db.Text
  algorithm   String
  createdAt   DateTime @default(now())
  wasAccepted Boolean?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId, algorithm])
  @@index([userId])
  @@map("recommendations")
}
