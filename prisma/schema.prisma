generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(cuid())
  clerkId     String   @unique
  email       String   @unique
  firstName   String?
  lastName    String?
  avatar_path String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  watchedHistories WatchedHistory[]
  favorites        Favorites[]
  reviews          Review[]
  watchLists       WatchList[]
  userPreference   UserPreference[]
  recommendations  Recommendation[]

  @@map("users")
}

model WatchedHistory {
  id            String   @id @default(cuid())
  contentId     Int
  title         String?
  backdrop_path String?
  overview      String?
  release_date  String?
  vote_average  Float?
  genres        String[]
  userId        String
  type          String
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, contentId, type])
  @@index([userId])
  @@map("watched_history")
}

model WatchList {
  id            String   @id @default(cuid())
  contentId     Int
  title         String?
  backdrop_path String?
  overview      String?
  release_date  String?
  vote_average  Float?
  userId        String
  type          String
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, contentId, type])
  @@index([userId])
  @@map("watchlist")
}

model Favorites {
  id            String        @id @default(cuid())
  contentId     Int
  title         String?
  backdrop_path String?
  overview      String?
  release_date  String?
  vote_average  Float?
  userId        String
  type          WatchListType
  createdAt     DateTime      @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, contentId, type])
  @@index([userId])
  @@map("favorite_movies")
}

model Review {
  id        String   @id @default(cuid())
  contentId Int
  userId    String
  type      String
  content   String?  @db.Text
  rating    Int?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("reviews")
}

model UserPreference {
  id              String   @id @default(cuid())
  userId          String   @unique
  favoriteGenres  String[]
  dislikedGenres  String[]
  moodPreferences String   @db.Text
  lastAnalyzedAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

model Recommendation {
  id          String   @id @default(cuid())
  userId      String
  contentId   Int
  type        String
  score       Float
  reason      String   @db.Text
  algorithm   String
  createdAt   DateTime @default(now())
  wasAccepted Boolean?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, contentId, type, algorithm])
  @@index([userId])
  @@map("recommendations")
}

enum WatchListType {
  Movie
  TV
  Actor
}
